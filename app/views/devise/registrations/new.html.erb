<div class="Container">
  <div class="FormContainer">
      <h2 class="mb-3">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="field mb-3">
          <%= f.label :name, class: "form-label Write_Required" %>
          <%= f.text_field :name, class: "form-control", placeholder: "ユーザ名を入力", autofocus: true, autocomplete: "name" %>
          <%= render "devise/shared/error_messages", object: resource, key: "name" %>
        </div>
      
        <div class="field mb-3">
          <%= f.label :email, class: "form-label Write_Required" %>
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力", autocomplete: "email" %>
          <%= render "devise/shared/error_messages", object: resource, key: "email" %>
        </div>
      
        <div class="field mb-3">
          <%= f.label :password, class: "form-label Write_Required" %>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力", autocomplete: "new-password" %>
          <%= render "devise/shared/error_messages", object: resource, key: "password" %>
        </div>
      
        <div class="field mb-4">
          <%= f.label :password_confirmation, class: "form-label Write_Required" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "確認用パスワードを入力", autocomplete: "new-password" %>
          <%= render "devise/shared/error_messages", object: resource, key: "password_confirmation" %>
        </div>
      
        <div class="actions mb-3">
          <%= f.submit "新しいアカウントを作成", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
      <%= link_to "アカウントをお持ちの方はログイン", new_session_path(resource_name), class: "btn btn-secondary w-100" %>
  </div>
</div>
